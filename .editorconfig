# https://github.com/sveltejs/kit/blob/master/.editorconfig
root = true

[*]
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# https://github.com/RehanSaeed/EditorConfig/blob/main/.editorconfig
# YAML Files
[*.{yml,yaml}]
indent_style = space
# Markdown Files
[*.{md,mdx}]
indent_style = space
